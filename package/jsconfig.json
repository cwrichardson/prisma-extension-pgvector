    "include": ["**/*.ts", "**/*.js", "**/*.mjs"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "$types/*": [
                "types/*"
            ]
        },
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "checkJs": true
    }
}