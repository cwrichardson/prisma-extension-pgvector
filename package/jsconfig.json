{
    "include": ["**/*.ts", "**/*.js"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "$types/*": [
                "src/types/*"
            ]
        },
        "noEmit": true,
        "lib": ["ESNext"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "target": "ESNext",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "noImplicitAny": true
    }
}