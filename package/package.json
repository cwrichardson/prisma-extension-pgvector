{
  "name": "prisma-extension-pgvector",
  "version": "0.1.0",
  "author": {
    "name": "Chris Richardson",
    "url": "https://chrisrichardson.info"
  },
  "description": "A PGVector extension for Prisma",
  "keywords": [
    "prisma",
    "prisma-client",
    "prisma-extension",
    "@prisma/client",
    "extension",
    "pgvector"
  ],
  "type": "module",
  "module": "src/index.js",
  "main": "dist/index.cjs",
  "files": [
    "src",
    "types",
    "dist"
  ],
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "esbuild ./src/index.js --bundle --format=cjs --outfile=dist/index.cjs --platform=node --external:@prisma/client --external:pgvector",
    "prepublishOnly": "pnpm build",
    "test": "vitest",
    "prisma:generate": "pnpx prisma generate --schema=./test/setup/schema.prisma",
    "lint:fix": "eslint --ignore-path .gitignore . --fix",
    "lint": "eslint --ignore-path .gitignore ."
  },
  "peerDependencies": {
    "@prisma/client": ">=5.7.0",
    "pgvector": ">=0.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@stylistic/eslint-plugin-js": "^2.1.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "globals": "^15.2.0",
    "prisma": "^5.7.0",
    "typescript": "^5.1.6",
    "typescript-eslint": "^7.9.0",
    "vitest": "^1.6.0"
  },
  "prisma": {
    "seed": "node ./test/utilities/seed.js"
  }
}
