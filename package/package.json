{
  "name": "prisma-extension-pgvector",
  "version": "0.10.1",
  "author": {
    "name": "Chris Richardson",
    "url": "https://chrisrichardson.info"
  },
  "description": "A PGVector extension for Prisma",
  "keywords": [
    "prisma",
    "prisma-client",
    "prisma-extension",
    "@prisma/client",
    "extension",
    "pgvector"
  ],
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "cwrichardson/prisma-extension-pgvector",
    "directory": "package"
  },
  "files": [
    "src",
    "types",
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "esbuild ./src/index.js --bundle --format=cjs --outfile=dist/index.cjs --platform=node --external:@prisma/client --external:pgvector",
    "prepublishOnly": "pnpm build",
    "test": "vitest run test --project unit",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run test --project e2e",
    "test:e2e:watch": "vitest --project e2e",
    "test:watch": "vitest --project e2e",
    "lint:fix": "eslint . --fix",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "@prisma/client": ">=5.14.0",
    "pgvector": ">=0.1.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.0",
    "@eslint/js": "^9.5.0",
    "@stylistic/eslint-plugin-js": "^2.2.2",
    "@vitest/coverage-v8": "^1.6.0",
    "esbuild": "^0.20.2",
    "eslint": "^9.5.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.6.0",
    "prisma": "^=5.14.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "8.0.0-alpha.33",
    "vitest": "^1.6.0"
  }
}
